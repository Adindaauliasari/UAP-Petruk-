#include <iostream>
#include <queue>
#include <windows.h>

using namespace std;

int main(){
	queue <string> antrian;
	int pilih;
	string input;
	string nama;

	do{
	cout << endl;
    
        cout<<"\t\t\t\t======= Sistem Antrian klinik harapan bunda====="<<endl;
        cout << endl;
        cout<<"\t\t\t\t======================================================="<<endl;
        cout<<"\t\t\t\t\t 1. Tambah data antrian pasien "<<endl;
        cout<<"\t\t\t\t\t 2. Panggil antrian pasien"<<endl;
        cout<<"\t\t\t\t\t 3. Melihat nomor antrian"<<endl;
        cout<<"\t\t\t\t\t 4. Hapus nomor antrian"<<endl;
	cout<<"\t\t\t\t\t 5. Keluar"<<endl;
        cout<<"\t\t\t\t======================================================="<<endl;	
	
	cout <<"Masukan Pilihan (1-5) : ";
	cin >> pilih;
	cout << endl;
		
	switch (pilih){		//percabangan switch case
	case 1:
	cout << "Masukkan nama pasien : ";
	cin>> nama;
	cout <<"Masukan nomor Antrian  ";
	cin >> input;
	antrian.push(input);
	cout <<endl;
	system("cls");
	

	cout<<"\t\t\t\t-------------------------------------------------------"<< endl;
	cout<<"\t\t\t\t\t             Klinik harapan bunda    "<< endl;
	cout<<"\t\t\t\t\t        JL.Flamboyan, Kecamatan Putri ayu " << endl;
	cout<<"\t\t\t\t-------------------------------------------------------"<< endl;
	cout<<  "\t\t\t\t\t\t Pasien atas nama : " << nama <<endl;
	cout << endl;
	cout << "\t\t\t\t\t\t Nomor antrian Anda  "<< endl;
	cout << "\t\t\t\t\t\t\t["<<input <<"] "<<endl;
	cout <<endl;
	cout<<"\t\t\t\t-------------------------------------------------------"<< endl;
	cout <<"\t\t\t\t Silahkan menunggu sampai nomor antrian anda dipanggil"<< endl;
	cout<<"\t\t\t\t-------------------------------------------------------"<< endl;
	cout <<endl;

        break;
				
	case 2:
	if (antrian.empty()){		//kondisi jika data masih kosong
	cout <<">>>>>Tidak ada  nomor antrian yang masuk <<<<<<" ;
	}else{
	cout <<"nomor Antrian ["<<antrian.front() <<"] telah di panggil" <<endl;
	antrian.pop();
	}
	cout <<endl;
	
	break;
	
	case 3:
	if(!antrian.empty()){			//kondisi jika data masih kosong
	while (!antrian.empty()){
	cout <<"["<<antrian.front() <<"] ";
	antrian.pop();}else{
            	cout <<">>>>> Tidak ada antrian <<<<<<" ;
			}
			break;
		case 4:
				system("CLS");
					break;
	    	case 5:
				system("CLS");
				 cout << "\t\t\t\t < Terimakasih sudah mengantri di Klinik Harapan Bunda :) > " << endl;			 
		}
	}while (pilih >=1 && pilih <=4);
}

